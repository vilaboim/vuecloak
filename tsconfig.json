{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "target": "ES2015",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "types": ["node"],
    "noImplicitAny": true,
    "noEmit": true,
    "noEmitOnError": true
  },
  "include": [
    "src/*",
  ],
  "exclude": [
    "dist",
    "node_modules",
  ]
}
